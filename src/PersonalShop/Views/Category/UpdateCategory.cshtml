@using PersonalShop.BusinessLayer.Services.Categories.Dtos;
@model SingleCategoryDto

@{
    ViewData["Title"] = "Update Category";
}
<h1>Update Category</h1>

<h4>Category Details</h4>
<hr />
<form asp-action="UpdateCategory" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" style="pointer-events: none; opacity: 0.8;" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            @if(Model.ParentId != 0)
            {
                <div class="form-group">
                    <label asp-for="ParentId" class="control-label"></label>
                    <input asp-for="ParentId" class="form-control" style="pointer-events: none; opacity: 0.8;" />
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="user" asp-action="categories">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
